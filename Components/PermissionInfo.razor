@using Vchd.Permission.Client.Components

<MudDialog Style="min-width: 500px; min-height: auto;">
    <TitleContent>
        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Primary" Size="Size.Medium" />
        <span class="ml-2">Ruxsat tegishli xodimga jo'natildi</span>
    </TitleContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary" Variant="Variant.Filled">Yopish</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [Inject] private IDialogService DialogService { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private void Close()
    {
        NavigationManager.NavigateTo("/permissions");
    }
}