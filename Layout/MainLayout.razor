@inherits LayoutComponentBase

<MudThemeProvider @ref="@mudThemeProvider" @bind-IsDarkMode="@isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudToggleIconButton @bind-Toggled="isDrawerOpen" Icon="@Icons.Material.Rounded.Menu"
            ToggledIcon="@Icons.Material.Rounded.Close" />
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@isDarkMode" Icon="@Icons.Material.Filled.LightMode"
            ToggledIcon="@Icons.Material.Filled.DarkMode" Color="Color.Inherit" ToggledColor="Color.Inherit" />
        <MudIconButton Class="ml-5" Icon="@Icons.Material.Filled.AddModerator" Edge="Edge.Start" Href="/register" />
        <MudIconButton Class="ml-5" Icon="@Icons.Material.Filled.Login" Edge="Edge.Start" Href="/login" />
    </MudAppBar>
    <MudDrawer @bind-Open="@isDrawerOpen" Variant="@DrawerVariant.Mini" ClipMode="DrawerClipMode.Always"
        Breakpoint="Breakpoint.Md" Elevation="3" Class="pt-5">

        <MudNavMenu Class="mud-width-full">
            <MudText Typo="Typo.h6" Class="p-2" Align="Align.Center">Vchd 4 Ruxsat</MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href="/new-permission" Icon="@Icons.Material.Filled._6FtApart">Yangi Ruxsat
            </MudNavLink>
            <MudNavLink Href="/permissions" Icon="@Icons.Material.Filled.People">Barcha Ruxsatlar</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code {
    private MudTheme mudTheme = new MudTheme();
    private bool isDarkMode = true;
    private bool isDrawerOpen = true;
    private MudThemeProvider mudThemeProvider = default!;
}
